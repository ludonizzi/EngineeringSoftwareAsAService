

<% if(current_user.clan == 1) %><h1>Classifica Guerrieri</h1> <% end %>

<% if(current_user.clan == 2) %><h1>Classifica Elfi</h1> <% end %>

<% if(current_user.clan == 3) %><h1>Classifica Orchi</h1> <% end %>

<title>Classifica Membri Clan</title>

<table width="100%" height="50%">
	<thead>
		<tr>
			<th>Rank</th><th>Giocatore</th><th>Vittorie</th><th>Sconfitte</th><th>Ratio</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @users.each_with_index do |user,index| %>
			<% if (user.clan == current_user.clan) %>
				<th><%= index+1%></th>
				<th><%= link_to user.username, profile_path(user.id) %></th>
				<td> <%= user.vittorie %></td><td><%= user.sconfitte %></td><td><%=
				if user.sconfitte == 0
					user.vittorie/1

				else
					(((user.vittorie.to_f)/(user.sconfitte.to_f))*100).round / 100.0
				end%></td></tr>
			<% end %>
			<% end %>
		</tr>
	</tbody>
</table>

<style>
body
{
	font:10px
}
table  {
	border-collapse:collapse
	align="center"
}
td, th {
	border:2px solid #ddd;
	padding:10px;
}

tr:hover {
    background-color: #ebebeb;
}

</style>
