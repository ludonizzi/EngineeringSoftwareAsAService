<h1>Modifica Impostazioni Utente </h1>

<div class="row">


    <div class="col-md-2">
    </div>


    <div class="col-md-8">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.label :nome %>*<br/>
            <%= f.text_field :nome, autofocus: true, autocomplete: "nome" , class: 'form-control' %>


            <%= f.label :cognome %>*<br/>
            <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome" , class: 'form-control' %>

            <%= f.label :data_nascita %>*<br/>
            <%= f.date_field :data_nascita, autofocus: true, autocomplete: "data_nascita" , class: 'form-control' %>


            <%= f.label :email %>*<br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' %>




          <br/><br/>


          <h3>Nuova Password</h3>
          <i>(lascia vuoto se non vuoi cambiarla)</i><br/><br/>


          <div class="field">
            <%= f.label :password %> <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>

          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div><br/><br/>

        <div class="field">
          <h3>Nuovo Status</h3>
           <br/><br/>
          <%= f.label :status %>
          <i>(lascia vuoto se non vuoi cambiarlo)</i>
            <%= f.text_field(:status, class: 'form-control') %> <br/>
            </div>


        <h3>Conferma modifiche </h3>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

        <br/><br/>
          <div class="field">
            <%= f.label :current_password %>*
            <%= f.password_field :current_password, autocomplete: "current_password" , class: 'form-control'%>
          </div>

            *campi obbligatori
          <br/><br/>
          <br/><br/><br/>



          <div class="actions">
            <%= f.submit "Salva Modifiche" ,:class=> "btn btn-lg btn-primary"%>
          </div>
        <% end %>

        <footer class="footer">

        <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class=> "btn btn-lg btn-primary" ,style: " background-color:#dc143c; "%></p>

        <%= link_to "Back", :back %>

    </div>


    <div class="col-md-2">
    </div>

</div>




